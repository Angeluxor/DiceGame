<script src="/javascripts/createGame.js"></script>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
<form class="jumbotron text-center" id="newGame" method="POST">
    <h1 class="text-center">{{title}}</h1>
    <label for="Game_name">New game name: </label>
    <input id="Game_name" type="text" name="name_field" placeholder="New game"><br>
    <label for="Game_type">Game type: </label>
    <input id="High_dice" type="radio" name="gameType_field" value="High dice" checked="checked">
    <label for="High dice">High dice</label>
    <input id="Low_dice" type="radio" name="gameType_field" value="Low dice">
    <label for="Low_dice">Low dice</label><br>
    <label for="Player1_name">Player 1: </label>
    <input id="Player1_name" type="text" name="player1_field" placeholder="Player 1">
    <label for="Player2_name">Player 2: </label>
    <input id="Player2_name" type="text" name="player2_field" placeholder="Player 2">
    <label for="Player3_name">Player 3: </label>
    <input id="Player3_name" type="text" name="player3_field" placeholder="Player 3">
    <button type="submit" class="btn btn-success" id="send_button" onclick="send(event)">Create</button>
</form>

